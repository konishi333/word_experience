<%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: '', local: true do |f| %>
<div class=''>
  <div class=''>
    <h1 class=''>
      ログインページ
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="">
    <div class=''>
      <label class="">メールアドレス</label>
      <span class="">必須</span>
    </div>
    <%= f.email_field :email, class:"", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="">
    <div class=''>
      <label class="">パスワード</label>
      <span class="">必須</span>
    </div>
    <%= f.password_field :password, class:"", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-orange-btn", id:"orange_button" %>
  </div>
  <div class="">
    <p class=''>※アカウント登録がお済みでない方は
      <%= link_to 'こちら', new_user_registration_path %>
      から新規登録してください。
    </p>
    <p class=''>※トップページへ戻るには
      <%= link_to 'こちら', root_path %>
      をクリックしてください。
    </p>
  </div>
</div>
<% end %>