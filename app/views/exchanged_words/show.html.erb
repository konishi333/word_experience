<div class="header">
  <%= render "shared/header" %>
</div>

<div class="split_main">
  <div class="side-bar">
    <%= render "shared/side_bar" %>
  </div>
  <div class="main_screen">
    <h3 class="word_theme">
      "ワード"詳細
    </h3>

    <div class="">
      <%= @exchanged_word.word.name %>
      <%= @main_category.find(@exchanged_word.word.main_category_id).name %>
      <%= @service_category.find(@exchanged_word.word.service_category_id).name %>
      <%= @exchanged_word.word.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      <%= @exchanged_word.word.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
    </div>

  </div>
</div>